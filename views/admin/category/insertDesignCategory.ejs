



<% if (data.typeCategory=="SubCategory" ) { %>

    <form method="POST" action="/category/AddNewDesignCategory">

        <div class="form-group row">
            <label for="example-text-input" class="col-sm-3 col-form-label">نام زیر دسته بندی</label>
            <div class="col-sm-9">
                <input class="form-control" type="name" name="CategoryName"  id="example-text-input">
            </div>
        </div>


        
        <div class="form-group row">
            <div class="col-sm-10">
                <input class="form-control" name="CategoryId" type="hidden" value="<%= data.categoryID %>" id="example-email-input">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <input class="form-control" name="TypeCategory" type="hidden" value="<%= data.typeCategory %>" id="example-email-input">
            </div>
        </div>
    


        <button type="submit" class="btn btn-success">ایجاد زیر دسته</button>
    </form>

    <% } else { %>

        <form method="POST" action="/category/AddNewDesignCategory">

            <div class="form-group row">
                <label for="example-text-input" class="col-sm-2 col-form-label">نام دسته بندی</label>
                <div class="col-sm-10">
                    <input class="form-control"  name="CategoryName" 
                        id="example-text-input">
                </div>
            </div>


          
        
            <div class="form-group row">
                <div class="col-sm-10">
                    <input class="form-control" name="TypeCategory" type="hidden" value="<%= data.typeCategory %>" id="example-email-input">
                </div>
            </div>
        


            <button type="submit" class="btn btn-success">ایجــاد دسته بندی جدید</button>
        </form>


        <% } %>