



<div class="row">
    <div class="col-10">
        <h4 class="mt-0 header-title">توضیحات</h4>
<p class="text-muted m-b-30 font-14">شرکت توسعه تجاری صنعت و خدمات هورای</p>

    </div>
    <div class="col-2">
        <a href="/person/addperson" class="btn btn-success"> افزودن شخص جدید</a>

    </div>
</div>

<div class="table-rep-plugin">
    <div class="table-responsive b-0" data-pattern="priority-columns">
        <table id="tech-companies-1" class="table  table-striped">
            <thead>
            <tr>
                <th data-priority="1">نام شخص</th>
                <th data-priority="3">ایمیل شخص</th>
                <th data-priority="1">آیدی</th>
                <th data-priority="1">عملیات</th>

            </tr>
            </thead>
            <tbody>

                <% allPerson.forEach(element => { %>
                    <tr>
                    <th> <%= element.Name %>  <span class="co-name"> <%= element.name %> </span></th>
                    <td><%= element.Email %></td>
                    <td><%= element.Id %></td>
                    <td>

                        <a href="/person/editPerson/<%= element.Id %>" class="btn btn-warning">اصلاح کاربر</a>
                        <a href="/person/deletePerson/<%= element.Id %>" class="btn btn-danger">حذف کاربر</a>

                    </td>

                  </tr>
               <% });   %>  
                
   
       

            </tbody>
        </table>
    </div>

</div>