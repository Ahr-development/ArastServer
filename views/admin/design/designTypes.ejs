<div class="row">
    <div class="col-10">
        <h4 class="mt-0 header-title">دیزاین ها</h4>
        <p class="text-muted m-b-30 font-14">در این قسمت انواع دیزاین های موجود در سایت را مشاهده میکنید و همچنین تحت
            کنترل شماست</p>

    </div>
    <div class="col-2">
        <a onclick="Add()" class="btn btn-success">ایجاد دیزاین جدید</a>

    </div>
</div>

<div class="container">

    <div class="row">


        <% designTypes.forEach(element=> { %>

            <div class="card m-b-30 col-3">
                <img class="card-img-top img-fluid"
                    src="https://s3.ir-thr-at1.arvanstorage.ir/<%= element.DesignCategoryPhoto %> "
                    alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title font-16 mt-0">
                        <%= element.DesignName %>
                    </h4>
                    <h4 class="text-success text-center"> ارتفاع : <%= element.DesignHeight %>
                    </h4>
                    <h4 class="text-success text-center"> عرض : <%= element.DesignWidth %>
                    </h4>


                    <a href="#" class="btn btn-primary waves-effect waves-light">کنترل طرح های موجود</a>
                    <a onclick="Edit( <%= element.Id %>)" class="btn btn-warning waves-effect waves-light">ویرایش
                        توضیحات دیزاین</a>
                    <a onclick="EditPhoto( <%= element.Id %>)" class="btn btn-danger waves-effect waves-light">ویرایش
                        عکس دیزاین</a>

                </div>
            </div>
            <% }); %>





    </div>



</div>




<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>






<div id="myModal" class="modal fade" tabindex="-1" role="dialog">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div id="bodyModal" class="modal-body">



            </div>

        </div>

    </div>

</div>



<script>

    function EditPhoto(id) {
        $.ajax({
            url: "/Design/EditDesignTypePhotoDashboard/" + id,
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#bodyModal').html(result);
        });
    }




    function Edit(id) {
        $.ajax({
            url: "/Design/EditDesignType/" + id,
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#bodyModal').html(result);
        });
    }



    function Add() {
        $.ajax({
            url: "/Design/AddNewDesignType",
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#bodyModal').html(result);
        });
    }


</script>